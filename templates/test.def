  it('{{=test.describe[0]}}', done => {
    process.chdir('{{=it.cwd}}');
    const cli = new CliTest();
    cli.spawn('/bin/bash', ['--noprofile', '--norc', '-eo', 'pipefail', '{{=test.scriptArg}}'], {stdio: ['{{=it.stdin}}', 'pipe', 'pipe']}).then(res => {
      if (res.error === null) {
        done();
      } else {
        const error = [`CODE: ${res.error.code}`, `STDOUT: ${res.stdout}`, `STDERR: ${res.stderr}`].join('\n');
        done(new Error(error));
      }
    });
  });
